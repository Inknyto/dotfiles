# Create directory and cd into it
function mkv(){
    mkdir -p $(dirname $1) && nvim $1
}
function mkcd() {
  mkdir -p "$1" && cd "$1"
}

# Copy multiple files/directories to destination and cd there
function cpcd() {
  if [[ $# -lt 2 ]]; then
    echo "Usage: cpcd <source...> <destination>"
    return 1
  fi
  
  local dest="${@[-1]}"
  local sources=("${@[1,-2]}")
  
  cp -r "${sources[@]}" "$dest" && cd "$dest"
}

# Move multiple files/directories to destination and cd there
function mvcd() {
  if [[ $# -lt 2 ]]; then
    echo "Usage: mvcd <source...> <destination>"
    return 1
  fi
  
  local dest="${@[-1]}"
  local sources=("${@[1,-2]}")
  
  mv "${sources[@]}" "$dest" && cd "$dest"
}

# Create directory, move multiple items into it, and cd there
function mkmv() {
  if [[ $# -lt 2 ]]; then
    echo "Usage: mkmv <source...> <destination>"
    return 1
  fi
  
  local dest="${@[-1]}"
  local sources=("${@[1,-2]}")
  
  mkdir -p "$dest" && mv "${sources[@]}" "$dest" && cd "$dest"
}

